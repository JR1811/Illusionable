{
	"schemaVersion": 1,
	"id": "illusionable",
	"version": "${version}",
	"name": "Illusionable",
	"description": "Introducing an unstable state of mind. Entities can now choose who can \"perceive\" them",
	"authors": [
		"DEV - ShiroJR1811"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "MIT",
	"icon": "assets/illusionable/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"net.shirojr.illusionable.Illusionable"
		],
		"client": [
			"net.shirojr.illusionable.IllusionableClient"
		],
		"fabric-datagen": [
			"net.shirojr.illusionable.IllusionableDataGenerator"
		],
		"voicechat": [
			"net.shirojr.illusionable.IllusionableVoicechatPlugin"
		],
		"cardinal-components-entity": [
			"net.shirojr.illusionable.cca.IllusionableComponents"
		],
		"cardinal-components-scoreboard": [
			"net.shirojr.illusionable.cca.IllusionableComponents"
		]
	},
	"mixins": [
		"illusionable.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.16.10",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*",
		"cardinal-components-base": "^5.2.3",
		"cardinal-components-entity": "^5.2.3",
		"cardinal-components-scoreboard": "^5.2.3"
	},
	"suggests": {
		"voicechat": "*"
	},
	"custom": {
		"cardinal-components": [
			"illusionable:illusion",
			"illusionable:obfuscation"
		]
	}
}